var msgContainer = document.getElementById("messages-container");

var generatedHTML = "<ul class='timeline'> <% if @group.messages %><% @group.messages.each do |message| %><li><p class='string optional'><%= message.user.email.split("@")[0] %></p><small class='time-offset-display float-right' data-created-at='<%= message.created_at.iso8601 %>'></small><h4>'<%= message.subject %>'</h4></li><% end %><% end %></ul>"

msgContainer.innerHTML = generatedHTML;

var timeOffsetDisplays = document.querySelectorAll('.time-offset-display');

timeOffsetDisplays.forEach((display) => {
  display.innerText = timeLocal(display);
})

